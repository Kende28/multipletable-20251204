generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Felhasznalok {
  id Int @id @default(autoincrement())
  email String
  nev String
  createdAt DateTime @default(now())
  blog Bejegyzesek[]
}

model Bejegyzesek {
  id Int @id @default(autoincrement())
  title String
  content String
  user Felhasznalok @relation( fields: [userId], references: [id], onDelete: SetNull)
  userId Int
  createdAt DateTime @default(now())
}
